{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Ideas app",
    "description": "api documentation",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/",
      "description": "Local Dev"
    },
    {
      "url": "/api/",
      "description": "Online dev"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "API for authorization"
    },
    {
      "name": "User",
      "description": "API for user managment"
    },
    {
      "name": "Intention",
      "description": "API for intentions"
    }
  ],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Sign in user",
        "requestBody": {
          "description": "Credentionals Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/SignInRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/SignInData"
            }
          }
        }
      }
    },
    "/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "Create new user",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "name": "string"
            }
          }
        }
      }
    },
    "/account/intentions": {
      "get": {
        "tags": ["Intention"],
        "summary": "Get all intentions in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Intentions"
            }
          }
        }
      }
    },
    "/account/intention": {
      "post": {
        "tags": ["Intention"],
        "summary": "Create a new intentions in system",
        "requestBody": {
          "description": "Intention Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Intention"
              }
            }
          }
        },
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/id"
            }
          },
          "400": {
            "description": "Failed. Bad post data."
          }
        }
      }
    },
    "/intention/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of the intention that we want to match",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Intention"],
        "summary": "Get intention with given ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Intention with id",
            "schema": {
              "$ref": "#/definitions/id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Intention"
            }
          },
          "404": {
            "description": "Failed. Intention not found."
          }
        }
      },
      "put": {
        "summary": "Update intention with given ID",
        "tags": ["Intention"],
        "requestBody": {
          "description": "Intention Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Intention"
              }
            }
          }
        },
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Intention with new values of properties",
            "schema": {
              "$ref": "#/definitions/id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Intention"
            }
          },
          "400": {
            "description": "Failed. Bad post data."
          },
          "404": {
            "description": "Failed. Intention not found."
          }
        }
      },
      "delete": {
        "summary": "Delete intention with given ID",
        "tags": ["Intention"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "Delete Intention with id",
            "schema": {
              "$ref": "#/definitions/id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/id"
            }
          },
          "404": {
            "description": "Failed. Intention not found."
          }
        }
      }
    }
  },
  "definitions": {
    "id": {
      "properties": {
        "uuid": {
          "type": "string"
        }
      }
    },

    "SignInRequest": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "SignUpRequest": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "confirmPassword": {
          "type": "string"
        }
      }
    },
    "UpdateProfileRequest": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "gender": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "website": {
          "type": "string"
        }
      }
    },

    "SignInData": {
      "type": "object",
      "properties": {
        "accessToken": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "profile": {
          "type": "object"
        }
      }
    },
    "Intention": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "Intentions": {
      "type": "object",
      "properties": {
        "intentions": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/Intention"
          }
        }
      }
    }
  }
}
